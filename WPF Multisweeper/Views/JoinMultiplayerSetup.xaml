<Window x:Class="Multisweeper.JoinMultiplayerSetup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Multisweeper"
      mc:Ignorable="d" 
      Height="143.5" Width="183.833"
      Title="JoinMultiplayerSetup">

    <Grid>
        <StackPanel Orientation="Vertical" Background="WhiteSmoke">
            <StackPanel Margin="5" Orientation="Vertical" HorizontalAlignment="Center">
                <StackPanel Margin="5, 5, 0, 0" Orientation="Horizontal" Height="31">
                    <TextBlock Margin="5">Address: </TextBlock>
                    <TextBox Margin="5" Width="100" Name="AddressBox"></TextBox>
                </StackPanel>
                <TextBlock Margin="10, 0, 0, 10" FontSize="10">Ex: "http://localhost:8080/"</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Margin="5" Padding="3" Click="JoinGame">Connect</Button>
                <Button Margin="5" Padding="3" Click="CloseWindow">Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
