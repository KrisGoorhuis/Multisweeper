<Window x:Class="Multisweeper.CustomSinglePlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Multisweeper"
        mc:Ignorable="d"
        Title="CustomSinglePlayer" Height="152.5" Width="150">
    <Grid Margin="0,0,-5.5,16.5">
        <StackPanel Margin="5,0,0,0" >
            <StackPanel Margin="0, 5, 0, 0" Orientation="Horizontal">
                <TextBlock Padding="0, 0, 5, 0">Width:</TextBlock>
                <TextBox Name="customWidthField">25</TextBox>
            </StackPanel>
            <StackPanel Margin="0, 5, 0, 0" Orientation="Horizontal">
                <TextBlock Padding="0, 0, 5, 0">Height:</TextBlock>
                <TextBox Name="customHeightField">25</TextBox>
            </StackPanel>
            <StackPanel Margin="0, 5, 0, 0" Orientation="Horizontal">
                <TextBlock Padding="0, 0, 5, 0">Mine saturation %: </TextBlock>
                <TextBox x:Name="customSaturationField">30</TextBox>
            </StackPanel>
            <StackPanel Margin="0, 10, 0, 0" Orientation="Horizontal">
                <Button Click="StartCustomSinglePlayer">Start</Button>
                <Button>Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
