<Window x:Class="Multisweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Multisweeper"
        mc:Ignorable="d"
        Padding="0" 
        Title="MultiSweeper" MinHeight="200" MinWidth="100">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File" HorizontalAlignment="Right">

                <Separator></Separator>
                <MenuItem Header="Exit"/>
            </MenuItem>

            <MenuItem Header="Singleplayer">
                <MenuItem Header="New Game" Click="StartDefaultSingpleplayer"/>
                <MenuItem Header="New Custom Game" Click="StartCustomSinglePlayer"/>
            </MenuItem>

            <MenuItem Header="Multiplayer">
                <MenuItem Header="Host Game" Click="HostMultiplayer"/>
                <MenuItem Header="Join Game" Click="JoinMultiplayer"/>
            </MenuItem>

        </Menu>

        <Canvas Name="mainCanvas" MinHeight="20" MinWidth="20">

        </Canvas>
    </DockPanel>
</Window>
